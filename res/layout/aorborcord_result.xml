<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	style="@style/backgroundColor" android:orientation="vertical">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:layout_marginTop="5dp" 
			android:paddingBottom="5dp"
			android:textStyle="bold" 
			android:text="Number of votes : " 
			style="@style/textColor" />
		<TextView android:id="@+id/number_vote" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:layout_marginTop="5dp" 
			android:paddingBottom="5dp"
			android:textStyle="bold" 
			android:text="" 
			style="@style/textColor" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal"
		android:gravity="center">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:layout_marginTop="5dp" 
			android:paddingBottom="5dp"
			android:textStyle="bold" 
			android:text="Votes remaining : " 
			style="@style/textColor" />
		<TextView android:id="@+id/vote_remain" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:layout_marginTop="5dp" 
			android:paddingBottom="5dp"
			android:textStyle="bold" 
			android:text="" style="@style/textColor" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="horizontal"
		android:gravity="center">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:layout_marginTop="5dp" 
			android:paddingBottom="5dp"
			android:textStyle="bold" 
			android:text="Votes null : " 
			style="@style/textColor" />
		<TextView android:id="@+id/vote_null" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:layout_marginTop="5dp" 
			android:paddingBottom="5dp"
			android:textStyle="bold" 
			android:text="0" 
			style="@style/textColor" />
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:orientation="vertical"
		android:gravity="center">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:orientation="horizontal" 
			android:gravity="center">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="A"
				android:textSize="50dp" 
				style="@style/textColor" />
			<TextView android:id="@+id/a_value"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0"
				android:textSize="30dp" 
				style="@style/textColor" />
				<TextView android:id="@+id/a_percent"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0%"
				android:textSize="50dp" 
				style="@style/textColor" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:orientation="horizontal" 
			android:gravity="center">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="B"
				android:textSize="50dp" 
				style="@style/textColor" />
			<TextView android:id="@+id/b_value" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0"
				android:textSize="30dp" 
				style="@style/textColor" />
				<TextView android:id="@+id/b_percent" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0%"
				android:textSize="50dp" 
				style="@style/textColor" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:orientation="horizontal" 
			android:gravity="center">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="C"
				android:textSize="50dp" 
				style="@style/textColor" />
			<TextView android:id="@+id/c_value" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0"
				android:textSize="30dp" 
				style="@style/textColor" />
				<TextView android:id="@+id/c_percent" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0%"
				android:textSize="50dp" 
				style="@style/textColor" />
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:layout_weight="1"
			android:orientation="horizontal" 
			android:gravity="center">
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="D"
				android:textSize="50dp" 
				style="@style/textColor" />
			<TextView android:id="@+id/d_value" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0"
				android:textSize="30dp" 
				style="@style/textColor" />
				<TextView android:id="@+id/d_percent" 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" 
				android:gravity="center_vertical"
				android:layout_weight="1" 
				android:layout_marginTop="5dp"
				android:paddingBottom="5dp" 
				android:textStyle="bold" 
				android:text="0%"
				android:textSize="50dp" 
				style="@style/textColor" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
